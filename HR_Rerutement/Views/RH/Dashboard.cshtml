
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutRH.cshtml";
}



<div class="xs-pd-20-10 pd-ltr-20">


    <div class="card-box pd-20 height-100-p mb-30">
        <div class="row align-items-center">
            <div class="col-md-4">
                <img src="~/FrontFinal/rh.png" alt="" style=" height: 162px; width: 260px;">
            </div>
            <div class="col-md-8">
                <h4 class="font-20 weight-500 mb-10 text-capitalize">
                    Soyer le bienvenu ! <div class="weight-600 font-30 text-blue">RH User !</div>
                </h4>
                <p class="font-18 max-width-600">
                    Vous trouverez les listes de demandes de Recrutemet ainsi que les demandes de Formation .
                </p>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-xl-4 mb-30">
            <div class="card-box height-100-p widget-style1">
                <div class="d-flex flex-wrap align-items-center">
                    <div class="progress-data">
                        <div id="chart"></div>
                    </div>
                    <div class="widget-data">
                        <div class="h4 mb-0">@ViewBag.countRecrutements</div>
                        <div class="weight-600 font-14">Recrutement en Attente</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 mb-30">
            <div class="card-box height-100-p widget-style1">
                <div class="d-flex flex-wrap align-items-center">
                    <div class="progress-data">
                        <div id="chart2"></div>
                    </div>
                    <div class="widget-data">
                        <div class="h4 mb-0">@ViewBag.countdemandeur</div>
                        <div class="weight-600 font-14">Employés</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 mb-30">
            <div class="card-box height-100-p widget-style1">
                <div class="d-flex flex-wrap align-items-center">
                    <div class="progress-data">
                        <div id="chart4"></div>
                    </div>
                    <div class="widget-data">
                        <div class="h4 mb-0">@ViewBag.countFormations</div>
                        <div class="weight-600 font-14">Formation en Attente</div>
                    </div>
                </div>
            </div>
        </div>


    </div>

    <div class="row pb-10">
        <div class="col-md-8 mb-20">
            <div class="card-box height-100-p pd-20">
                <div class="d-flex flex-wrap justify-content-between align-items-center pb-0 pb-md-3">
                    <div class="h5 mb-md-0">Users Activities</div>
                    <div class="form-group mb-md-0">
                        <select class="form-control form-control-sm selectpicker">
                            <option value="">Last Week</option>
                            <option value="">Last Month</option>
                            <option value="">Last 6 Month</option>
                            <option value="">Last 1 year</option>
                        </select>
                    </div>
                </div>
                <div id="activities-chart"></div>
            </div>
        </div>
        <div class="col-md-4 mb-20">
            <div class="card-box min-height-200px pd-20 mb-20" data-bgcolor="#455a64">
                <div class="d-flex justify-content-between pb-20 text-white">
                    <div class="icon h1 text-white">
                        <i class="fa fa-calendar" aria-hidden="true"></i>
                        <!-- <i class="icon-copy fa fa-stethoscope" aria-hidden="true"></i> -->
                    </div>
                    <div class="font-14 text-right">
                        <div><i class="icon-copy ion-arrow-up-c"></i> 2.69%</div>
                        <div class="font-12">Since last month</div>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-end">
                    <div class="text-white">
                        <div class="font-14">Recrutement en Attente</div>
                        <div class="font-24 weight-500">@ViewBag.countRecrutements</div>
                    </div>
                    <div class="max-width-150">
                        <div id="appointment-chart"></div>
                    </div>
                </div>
            </div>
            <div class="card-box min-height-200px pd-20" data-bgcolor="#265ed7">
                <div class="d-flex justify-content-between pb-20 text-white">
                    <div class="icon h1 text-white">
                        <i class="fa fa-users" aria-hidden="true"></i>
                    </div>
                    <div class="font-14 text-right">
                        <div><i class="icon-copy ion-arrow-down-c"></i> 3.69%</div>
                        <div class="font-12">Since last month</div>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-end">
                    <div class="text-white">
                        <div class="font-14">Employées</div>
                        <div class="font-24 weight-500">@ViewBag.countdemandeur</div>
                    </div>
                    <div class="max-width-150">
                        <div id="surgery-chart"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>





    <div class="footer-wrap pd-20 mb-20 card-box">
        Copyright &copy;  @DateTime.Now.ToString("yyyy")  <a href="https://www.allcircuits.com/" target="_blank">Tis Circuit</a>
    </div>


</div>
