@model List<HR_Rerutement.Models.Recrutement>

@{
    ViewBag.Title = "ListeDesDemandesDeRecrutement";
    Layout = "~/Views/Shared/_LayoutRH.cshtml";
}

<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h4>Recrutement</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard","Chef")">Acceuil</a></li>
                            <li class="breadcrumb-item active" aria-current="page">
                                Liste des demandes de Recrutement
                            </li>
                        </ol>
                    </nav>
                </div>
               
            </div>
        </div>
        <!-- basic table  Start -->
        <div class="pd-20 card-box mb-30">
            <div class="clearfix mb-20">
                <div class="pull-left">
                    <h4 class="text-black h4">Liste des demandes de Recrutement</h4>
                </div>
                <div class="pull-right" style="display:none">
                    <div class="dropdown">
                        <a class="btn btn-primary dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                            Exporter
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="#">Excel</a>
                            <a class="dropdown-item" href="#">PDF</a>
                            <a class="dropdown-item" href="#">CSV</a>
                        </div>
                    </div>
                </div>
            </div>
            <table class="data-table table stripe hover nowrap">
                <thead>
                    <tr>
                        <th class="font-weight-bold">DEMANDEUR</th>
                        <th class="font-weight-bold">FONCTION</th>

                        <th class="font-weight-bold">DATE CREATION</th>
                        <th class="font-weight-bold">CONTRAT</th>
                        <th class="font-weight-bold" style="padding-left: 45px;">STATUT</th>
                        <th class="font-weight-bold">ACTION</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var recrutement in Model)
                    {

                    <tr>
                        <td scope="col">@recrutement.Matricule_Createur</td>
                        <td>@recrutement.Fonction_Demande</td>

                        <td>@recrutement.Date_Creation.ToString("dd'/'MM'/'yyyy")</td>
                        <td>@recrutement.Contrat</td>
                        <td>
                            @if (@recrutement.Statut == HR_Rerutement.Models.Statut.EnAttente)
                            {
                                @*<span class="label label-warning">En Attente</span>*@
                                <button type="button" class="btn btn-block btn-warning btn-sm" style="border-radius: 107.25rem !important; width: 73%;">En Attente</button>


                            }
                            @if (@recrutement.Statut == HR_Rerutement.Models.Statut.Acceptè)
                            {
                                <button type="button" class="btn btn-block btn-success btn-sm" style="border-radius: 107.25rem !important; width: 73%;">Accepté</button>
                                //<span class="label label-success">Accepté</span>
                            }
                            @if (@recrutement.Statut == HR_Rerutement.Models.Statut.Refusé)
                            {@*<span class="label label-danger">Refusé</span>*@
                            <button type="button" class="btn btn-block btn-danger btn-sm" style="border-radius: 107.25rem !important; width: 73%;">Refusé</button>
                        }

                        </td>
                        <td class="text-center">
                            <div class="dropdown">
                                <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href='@Url.Action("ConsulterDemandesRecrutement","RH", new { id=recrutement.Id_demande})'>
                                    <i class="dw dw-eye"></i>
                                </a>
                            </div>
                        </td>

                        @*<td class="text-center">
                            <div class="dropdown">
                                <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                    <i class="dw dw-more"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                    <a class="dropdown-item" href='@Url.Action("ConsulterDemandesRecrutement","RH", new { id=recrutement.Id_demande})'><i class="dw dw-eye"></i> View</a>
                                    <a class="dropdown-item" href="#"><i class="dw dw-edit2"></i> Edit</a>
                                    <a class="dropdown-item" href="#"><i class="dw dw-delete-3"></i> Delete</a>
                                </div>
                            </div>
                        </td>*@
                    </tr>

                    }

                </tbody>
            </table>

        </div>
        <!-- basic table  End -->


    </div>

</div>

